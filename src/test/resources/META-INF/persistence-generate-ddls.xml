<?xml version="1.0" encoding="UTF-8"?>
<persistence
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    version="2.1"
    xmlns="http://xmlns.jcp.org/xml/ns/persistence"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="org.kie.test.persistence.generate-ddl-scripts" transaction-type="JTA">
    <description>Hibernate test case template Persistence Unit for DDL script generation</description>
    <class>org.kie.processmigration.model.Plan</class>
    <class>org.kie.processmigration.model.Migration</class>
    <class>org.kie.processmigration.model.MigrationReport</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
  </persistence-unit>
</persistence>
